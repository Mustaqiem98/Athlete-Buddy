<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addAchievements">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="725dp">

        <EditText
            android:id="@+id/tournament"
            android:layout_width="314dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="212dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/custom_input"
            android:drawablePadding="12dp"
            android:ems="10"
            android:hint="Enter Tournament or Event Name"
            android:padding="10dp" />

        <EditText
            android:id="@+id/title"
            android:layout_width="314dp"
            android:layout_height="60dp"
            android:layout_below="@id/textView14"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="322dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/custom_input"
            android:drawablePadding="12dp"
            android:ems="10"
            android:hint="Enter Achievement Title"
            android:padding="10dp" />

        <EditText
            android:id="@+id/location"
            android:layout_width="314dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="433dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/custom_input"
            android:drawablePadding="12dp"
            android:ems="10"
            android:hint="Enter Location"
            android:padding="10dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="73dp"
            android:text="Choose Sport" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="51dp"
            android:layout_marginLeft="51dp"
            android:layout_marginTop="290dp"
            android:text="Enter Achievement Title" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="400dp"
            android:text="Enter Location" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="181dp"
            android:text="Enter Tournament" />

        <Spinner
            android:id="@+id/sport"
            android:layout_width="309dp"
            android:layout_height="57dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="103dp"
            android:baselineAligned="false" />

        <Button
            android:id="@+id/btn_add_achievement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="130dp"
            android:layout_marginRight="130dp"
            android:layout_marginBottom="35dp"
            android:text="Add Achievement" />

        <Button
            android:id="@+id/btnCamera"
            android:layout_width="141dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/imgachievement"
            android:layout_alignParentBottom="false"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="140dp"
            android:text="Camera" />

        <Button
            android:id="@+id/btnGallery"
            android:layout_width="141dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/imgachievement"
            android:layout_alignParentBottom="false"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="88dp"
            android:text="Gallery" />

        <ImageView
            android:id="@+id/imgachievement"
            android:layout_width="164dp"
            android:layout_height="204dp"
            android:layout_alignWithParentIfMissing="false"
            android:layout_alignLeft="@id/location"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="false"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="false"
            android:layout_marginStart="196dp"
            android:layout_marginLeft="146dp"
            android:layout_marginTop="520dp"
            android:layout_marginBottom="108dp"
            app:srcCompat="@drawable/photo" />

    </RelativeLayout>
</ScrollView>
